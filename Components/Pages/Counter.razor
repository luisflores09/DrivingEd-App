@page "/register"
@rendermode InteractiveServer

<PageTitle>Student Registration</PageTitle>

<h1>Student Registration</h1>

<EditForm Model="@student" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <InputText id="name" class="form-control" @bind-Value="student.Name" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" type="email" class="form-control" @bind-Value="student.Email" />
    </div>

    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <InputText id="phone" class="form-control" @bind-Value="student.PhoneNumber" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

@if (isPaymentVisible)
{
    <div class="mt-4">
        <h3>Make Payment</h3>
        <button class="btn btn-success" @onclick="MakePayment">Pay Registration Fee</button>
    </div>
}

@code {
    private Student student = new Student();
    private bool isPaymentVisible = false;

    private void HandleValidSubmit()
    {
        // Logic to handle registration (e.g., save to database)
        isPaymentVisible = true;
    }

    private void MakePayment()
    {
        // Logic to handle payment
        Console.WriteLine("Payment processed!");
    }

    public class Student
    {
        public string Name { get; set; }
        public string Email { get; set; }
        public string PhoneNumber { get; set; }
    }
}
